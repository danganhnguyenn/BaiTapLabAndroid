<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5EBFF">

    <!-- Logo -->
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/nlu" />

    <!-- Tên -->
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Võ Tấn Toàn"
        android:textColorHint="#757575"
        android:enabled="true"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <!-- Số điện thoại -->
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:textColorHint="#757575"
        android:inputType="phone"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#757575"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <!-- Địa chỉ -->
    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        android:textColorHint="#757575"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <!-- Ngày sinh và Giới tính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Ngày sinh -->
        <EditText
            android:id="@+id/edtBirthDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Chọn ngày sinh"
            android:textColorHint="#757575"
            android:textColor="#000000"
            android:focusable="false"
            android:clickable="true" />

        <!-- Giới tính -->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textColor="#000000" />
        </RadioGroup>
    </LinearLayout>

    <!-- Khóa học -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khóa học"
        android:textStyle="bold"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chkAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Chọn tất cả)"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chkAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chkWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/chkJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java cơ bản"
        android:textColor="#000000" />

    <!-- Nút hoàn thành -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàn thành"
        android:layout_gravity="center"
        android:backgroundTint="#9A58B4"
        android:textColor="#FFFFFF" />
</LinearLayout>
